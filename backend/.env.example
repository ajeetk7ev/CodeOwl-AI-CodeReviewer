# ======================
# SERVER CONFIGURATION
# ======================
PORT=5001

# ======================
# DATABASE
# ======================
MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/CodeOwl

# ======================
# REDIS (for BullMQ queues)
# ======================
REDIS_URL=redis://localhost:6379

# ======================
# GITHUB OAUTH
# ======================
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:5001/api/auth/github/callback

# ======================
# GITHUB WEBHOOKS
# ======================
GITHUB_WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_URL=https://your-ngrok-url.ngrok-free.dev

# ======================
# JWT AUTHENTICATION
# ======================
JWT_SECRET=your_jwt_secret

# ======================
# FRONTEND
# ======================
FRONTEND_URL=http://localhost:5173

# ======================
# PINECONE (Vector Database)
# ======================
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX=codeowl-index

# ======================
# OPENROUTER (AI Services)
# ======================
OPENROUTER_KEY=your_openrouter_key

# ======================
# RAZORPAY (Payments)
# ======================
RAZORPAY_API_KEY=your_razorpay_key_id
RAZORPAY_API_SECRET=your_razorpay_secret
